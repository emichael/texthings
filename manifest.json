{
  "manifest_version": 2,

  "name": "TeX All the Things",
  "short_name": "TeX Things",
  "author": "emichael",
  "description": "An extension which lets you enable LaTeX on any website",
  "version": "1.1.5",

  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "img/browser38.png",
      "19": "img/browser19.png"
    },
    "default_title": "TeX All the Things"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["js/texify.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["js/background.js", "js/options.js"],
    "persistent": true
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "web_accessible_resources" : ["js/pageScript.js"],

  "options_page": "options.html"
}
